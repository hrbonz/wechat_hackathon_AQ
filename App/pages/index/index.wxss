/**index.wxss**/

/* Global Elements */

view, text, image, button {
  box-sizing: border-box;
}

/* -------- */

.main-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20px 0;
}

/* City Headline */
.city-container {
  margin: 0 0 10px 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  font-family: sans-serif;
  line-height: 1.25;
}
.city-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto;
}

.tagline-text, .headline-text {
  position: relative;
}
.tagline-text {
  height: 20px;
}
.headline-text {
  height: 50px;
}

.text-couldbe, .city-couldbe {
  position: absolute;
  top: 0;
  left: 0;
}
.text-currently, .city-currently {
  position: relative;
}

.text-currently,
.text-couldbe {
  font-size: 16px;
  font-weight: 300;
  font-style: italic;
}

.mask-on .text-currently, 
.mask-off .text-couldbe {
  opacity: 0;
  transition: opacity .3s ease;
}
.mask-on .text-couldbe, 
.mask-off .text-currently {
  opacity: 1;
  transition: opacity .3s ease .2s;
}

.city-currently,
.city-couldbe {
  font-size: 50px;
  font-weight: 300;
  font-style: italic;
  line-height: 1;
  transition: transform .4s ease;
}

.mask-off .city-currently,
.mask-on .city-couldbe {
  transform: translateX(0);
}
.mask-on .city-currently {
  -webkit-transform: translate( 0, 50%);
  transform: translate( 0, 50%);
}
.mask-off .city-couldbe {
  transform: translateX( 200% );
}

.aqi-container {
  margin: 0 0 15px 0;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  border: solid 2px #ff5a5a;
  padding: 20px;
  height: 144px;
  width: 140px;
  border-radius: 50%;
}

.aqi {
  font-weight: 300;
  font-size: 48px;
  line-height: 1;
}

.aqi-unit {
  font-weight: 300;
  font-size: 15px;
  color: #666;
}

.mask-button {
  display: flex;
  align-items: center; 
  justify-content: center;
  margin: 25px 0;
  background: #ff5a5a;
  color: white;
  border-radius: 100px;
  height: 140px;
  width: 140px;
  text-align: center;
  box-shadow: 4px 4px 0px 0px #c32035;
  transition: all .1s ease; 
}
.mask-button:active {
  transform: translate(2px, 2px);
  box-shadow: 2px 2px 0px 0px #c32035;
}

.tidbits {
  position: absolute;
  bottom: 15px;
  right: 15px;
  border: solid 1px #000;
  border-radius: 50%;
  height: 20px;
  width: 20px;
  color: #000;
  font-family: 'Times New Roman', Times, serif;
  text-align: center;
  font-weight: bold;
  transition: all .2s ease;
}
.tipbits:active {
  background: #000;
  color: #fff;
}

.backdrop {
  position: absolute;
  z-index: -1;
  background: #d8a272;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  transition: background 1s ease;
}
.backdrop .gradient-shade {
  position: absolute;
  z-index: 0;
  left: 0;
  top: 110px;
  bottom: 0;
  width: 100%;
  background: linear-gradient( to top, rgba(255,255,255,1) 0%,rgba(255,255,255,1) 52%,rgba(255,255,255,0.8) 52%,rgba(255,255,255,0.8) 64%, rgba(255,255,255,0.6) 64%, rgba(255,255,255,0.6) 76%, rgba(255,255,255,0.4) 76%,rgba(255,255,255,0.4) 88%, rgba(255,255,255,0.2) 88%, rgba(255,255,255,0.2) 100%);
}